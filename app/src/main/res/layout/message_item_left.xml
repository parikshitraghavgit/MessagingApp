<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="295dp" android:layout_height="wrap_content"
    android:padding="9dp"
    >
<de.hdodenhof.circleimageview.CircleImageView
    android:layout_width="40dp"
    android:layout_height="40dp"
    android:id="@+id/profile_image"
    android:src="@drawable/profle"
    ></de.hdodenhof.circleimageview.CircleImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/show_text_message"
        android:layout_toRightOf="@id/profile_image"
        android:layout_marginLeft="6dp"
        android:text="testing message"
        android:textSize="18sp"
        android:padding="8dp"
        android:background="@drawable/background_left"

        ></TextView>

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/left_image_view"
        android:layout_toRightOf="@id/profile_image"
        android:layout_marginLeft="6dp"
        android:visibility="gone"
        ></ImageView>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_seen"
        android:text="seen"
        android:layout_below="@id/show_text_message"
        ></TextView>

</RelativeLayout>